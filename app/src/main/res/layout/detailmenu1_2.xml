<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009688">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@drawable/bg_button">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="วิธีบีบนมแม่"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />

                <TextView
                    android:textColor="#706b6b"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:text="@string/menudetail12"
                    />

                <TextView
                    android:textColor="#706b6b"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:text="@string/menudetail1.2"
                    />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:src="@drawable/momm"
                    android:layout_gravity="center"/>

                <TextView
                    android:textColor="#706b6b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:text="@string/menudetail1.2.1"
                    />


                <Button
                    android:layout_margin="5dp"
                    android:id="@+id/youtube"
                    android:textColor="#009688"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:padding="0dp"
                    android:background="@drawable/table"
                    android:layout_gravity="center"
                    android:text="  กดดู วีดีโอ สอนบีบนมแม่  "
                    />

            <!--    <WebView
                    android:id="@+id/videoview"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    />-->


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>