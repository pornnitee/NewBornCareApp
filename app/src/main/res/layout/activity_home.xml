<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@mipmap/hospital"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@drawable/bg_home">

     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NewBornCare"
                android:paddingTop="25dp"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="25sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Developer for "
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="15sp"/>


            <ImageView
                android:layout_width="300dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:src="@mipmap/logo2"/>


            <Button
                android:layout_margin="10dp"
                android:background="@mipmap/background"
                android:id="@+id/home1"
                android:drawableRight="@drawable/btn1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="@string/menu1"
                android:textSize="20sp"
                android:padding="10dp"
               >

            </Button>

                <Button
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@mipmap/background"
                    android:id="@+id/home2"
                    android:drawableLeft="@drawable/btn2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="การป้อนนมลูก"
                    android:textSize="20sp"
                    android:padding="10dp">

                </Button>

                <Button
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@mipmap/background"
                    android:id="@+id/home3"
                    android:drawableRight="@drawable/btn3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="@string/menu3"
                    android:textSize="20sp"
                    android:padding="10dp">

                </Button>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>