<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009688">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@drawable/bg_button">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ระยะเวลาการเก็บน้ำนม"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />

                <TableLayout
                    android:id="@+id/table"
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="45dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginRight="45dp"
                    android:layout_margin="10dp"
                    android:layout_height="fill_parent"
                    android:stretchColumns="*">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/tablebg"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="วิธีการเก็บ"
                            android:textColor="#fff"
                            android:background="@drawable/tablebg"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="#fff"
                            android:background="@drawable/tablebg"
                            android:text="@string/menudetail1.4" />

                    </TableRow>



                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/table">

                        <TextView
                            android:gravity="left"
                            android:padding="5dp"
                            android:text="@string/menudetail1.4.1"
                            android:background="@drawable/table"
                            android:textStyle="bold"/>

                        <TextView
                            android:gravity="center"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:background="@drawable/table"
                            android:text="@string/menudetail1.4.5" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/table">

                        <TextView
                            android:gravity="left"
                            android:text="@string/menudetail1.4.2"
                            android:padding="5dp"
                            android:background="@drawable/table"
                            android:textStyle="bold"/>

                        <TextView
                            android:gravity="center"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:background="@drawable/table"
                            android:text="@string/menudetail1.4.6" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/table">

                        <TextView
                            android:gravity="left"
                            android:text="เก็บในกระติกน้ำแข็ง"
                            android:padding="5dp"
                            android:background="@drawable/table"
                            android:textStyle="bold"/>

                        <TextView
                            android:gravity="center"
                            android:textStyle="bold"
                            android:padding="5dp"
                            android:background="@drawable/table"
                            android:text="1 วัน" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/table">

                        <TextView
                            android:padding="5dp"
                            android:gravity="left"
                            android:text="เก็บที่ตู้เย็นช่องธรรมดา"
                            android:background="@drawable/table"
                            android:textStyle="bold"/>

                        <TextView
                            android:gravity="center"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:background="@drawable/table"
                            android:text="2-3 วัน" />

                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/table">

                        <TextView
                            android:gravity="left"
                            android:padding="5dp"
                            android:text="@string/menudetail1.4.3"
                            android:background="@drawable/table"
                            android:textStyle="bold"/>

                        <TextView
                            android:padding="5dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:background="@drawable/table"
                            android:text="@string/menudetail1.4.7" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/table">

                        <TextView
                            android:gravity="left"
                            android:padding="5dp"
                            android:text="@string/menudetail1.4.4"
                            android:background="@drawable/table"
                            android:textStyle="bold"/>

                        <TextView
                            android:gravity="center"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:background="@drawable/table"
                            android:text="@string/menudetail1.4.8" />

                    </TableRow>

                </TableLayout>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>